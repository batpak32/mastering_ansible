# -*- mode: ruby -*-
# vi: set ft=ruby :

# README
#
# Getting Started:
# 1. vagrant plugin install vagrant-hostmanager
# 2. vagrant up
# 3. vagrant ssh
#
# This should put you at the control host
#  with access, by name, to other vms
Vagrant.configure(2) do |config|
  config.hostmanager.enabled = true

  config.vm.box = "ubuntu/trusty64"

  config.vm.define "control", primary: true do |h|
    h.vm.network "private_network", ip: "192.168.135.10"
    h.vm.hostname = "control"
    h.vm.provision :shell, :inline => <<'EOF'
#Configure the varant ssh key
if [ ! -f "/home/vagrant/.ssh/id_rsa" ]; then
  ssh-keygen -t rsa -N "" -f /home/vagrant/.ssh/id_rsa
fi
cp /home/vagrant/.ssh/id_rsa.pub /vagrant/control.pub

cat << 'SSHEOF' > /home/vagrant/.ssh/config
Host *
  StrictHostKeyChecking no
  UserKnownHostsFile=/dev/null
SSHEOF

chown -R vagrant:vagrant /home/vagrant/.ssh/

#Configure the ansible user
useradd -m ansible

if [ ! -f "/home/ansible/.ssh/id_rsa" ]; then
  mkdir -p /home/ansible/.ssh
  ssh-keygen -t rsa -N "" -f /home/ansible/.ssh/id_rsa
fi
cp /home/ansible/.ssh/id_rsa.pub /vagrant/ansible.pub

cat << 'SSHEOF' > /home/ansible/.ssh/config
Host *
  StrictHostKeyChecking no
  UserKnownHostsFile=/dev/null
SSHEOF

cat << 'SSHEOF' > /etc/sudoers.d/ansible
# Mastering Ansible: This file was created/modified by Jon Barry
ansible ALL=(ALL) NOPASSWD:ALL
SSHEOF

chown -R ansible:ansible /home/ansible/.ssh/

EOF
    h.vm.synced_folder "/Users/barryjo/mastering-ansible/content", "/work",
      owner: "vagrant", group: "vagrant"
  end
end
